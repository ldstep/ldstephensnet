---
layout: layouts/base.njk
---
{# Only include the syntax highlighter CSS on blog posts, included with the CSS per-page bundle #}
{%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %}
{%- css %}{% include "public/css/prism-diff.css" %}{%- endcss %}

<main>
  <article class="post-content">
    <header>
      <h1>{{ title }}</h1>
      <ul class="post-metadata">
        <li>
          <time datetime="{{ page.date | htmlDateString }}">
            {{ page.date | readableDate }}
          </time>
        </li>
        {%- for tag in tags | filterTagList %}
          {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
          <li>
            <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
            {%- if not loop.last %}, {% endif %}
          </li>
        {%- endfor %}
      </ul>
    </header>

    <section class="post-body">
      {{ content | safe }}
    </section>

    {%- if collections.posts %}
      {%- set previousPost = collections.posts | getPreviousCollectionItem %}
      {%- set nextPost = collections.posts | getNextCollectionItem %}
      {%- if nextPost or previousPost %}
        <nav class="links-nextprev" aria-label="Post navigation">
          <ul>
            {%- if previousPost %}
              <li class="links-nextprev-prev">
                ← Previous<br>
                <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
              </li>
            {% endif %}
            {%- if nextPost %}
              <li class="links-nextprev-next">
                Next →<br>
                <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
              </li>
            {% endif %}
          </ul>
        </nav>
      {%- endif %}
    {%- endif %}
  </article>
</main>